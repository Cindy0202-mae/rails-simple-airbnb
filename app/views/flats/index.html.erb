
<div class="container">
  <h1>All our Flats</h1>
  <div class="row">
    <% @flats.each do |flat| %>
    <div class="col-md-4 d-flex align-items-stretch">
      <div class="card mb-4 w-100">
        <div class="card-body">
          <h5 class="card-title"><%= flat.name %></h5>
          <p class="card-text"><%= flat.address %></p>
          <p class="card-text"><i class="fa-solid fa-user-group"></i> <%= flat.number_of_guests %></p>
          <p class="card-text"><i class="fa-solid fa-yen-sign"></i> <%= flat.price_per_night %></p>
          <div class="card-body">
            <%= link_to 'More info', flat_path(flat), class: 'btn btn-primary mr-2' %>
            <%= link_to 'Edit', edit_flat_path(flat), class: 'btn btn-secondary mr-2' %>
            <%= link_to 'Remove',  flat_path(flat), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-danger ml-2' %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
