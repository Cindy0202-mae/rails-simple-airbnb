<div class="card">
  <div class="card-header">
    <h2><%= @flat.new_record? ? 'New Flat' : 'Edit Flat' %></h2>
  </div>
  <div class="card-body">
    <%= form_with model: @flat, local: true do |form| %>
      <div class="form-group">
        <%= form.label :name, class: 'form-label' %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :address, class: 'form-label' %>
        <%= form.text_field :address, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :description, class: 'form-label' %>
        <%= form.text_area :description, class: 'form-control', rows: 5 %>
      </div>
      <div class="form-group">
        <%= form.label :number_of_guests, class: 'form-label' %>
        <%= form.number_field :number_of_guests, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :price_per_night, class: 'form-label' %>
        <%= form.number_field :price_per_night, class: 'form-control' %>
      </div>
      <div class="form-group mt-3">
        <%= form.submit @flat.new_record? ? 'Create Flat' : 'Update Flat', class: 'btn btn-primary' %>
        <%= link_to 'Cancel', flats_path, class: 'btn btn-danger ml-2' %>
      </div>
    <% end %>
  </div>
</div>
